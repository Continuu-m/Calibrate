// This says that prisma 7 does not xonrI
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  tasks     Task[]
}

model Task {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  predictions Prediction[]
  actuals     Actual[]
  subtasks    Subtask[]
  user        User     @relation(fields: [userId], references: [id])
}

model Subtask {
  id          String @id @default(cuid())
  taskId      String
  description String
  completed   Boolean @default(false)
  task        Task   @relation(fields: [taskId], references: [id])
}

model Prediction {
  id         String @id @default(cuid())
  taskId     String
  predictedTime Int
  confidence Float
  task       Task   @relation(fields: [taskId], references: [id])
}

model Actual {
  id         String @id @default(cuid())
  taskId     String
  actualTime Int
  notes      String?
  task       Task   @relation(fields: [taskId], references: [id])
}
